<div class="kifu-wrapper">

  <div class="new_link">
    <%= link_to '棋譜投稿ページへ', new_kifu_path %>
  </div>

  <h1>棋譜一覧</h1>

  <div class="kifu-lists">
    <%= @kifus.each do |kifu| %>
      <div class="one-kifu">
        <%# 日付 %>
        <div class="date">
          <%= kifu.date %>
        </div>
        <%# 相手 %>
        <div class="opponent">
          <%= kifu.opponent.name %>
        </div>
        <%# 結果 %>
        <div class="result">
          <%= kifu.result.name %>
        </div>
        <%# 戦型 %>
        <div class="type">
          <%= kifu.type.name %>
        </div>
        <%# 棋譜 %>
        <div class="kifu">
          <%= kifu.kifu %>
        </div>
      </div>
    <% end %>
  </div>
</div>